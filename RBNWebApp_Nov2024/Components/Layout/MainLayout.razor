@code {
    private string dateTimeValue = DateTime.Now.ToString("dd-MM-yyyy hh:mm:ss tt");
    private Timer? timer;

    protected override void OnInitialized()
    {
        timer = new Timer(1000); // Update every second
        timer.Elapsed += Timer_Elapsed;
        timer.AutoReset = true;
        timer.Enabled = true;
    }

    private async void Timer_Elapsed(object? sender, ElapsedEventArgs e)
    {
        dateTimeValue = DateTime.Now.ToString("dd-MM-yyyy hh:mm:ss tt");
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        if (timer != null)
        {
            timer.Elapsed -= Timer_Elapsed;
            timer.Stop();
            timer.Dispose();
        }
    }

    private async Task LogoutAsync()
    {
        await LocalStorage.RemoveItemAsync("userProfile");
        NavigationManager.NavigateTo("/login", true);
    }
}

