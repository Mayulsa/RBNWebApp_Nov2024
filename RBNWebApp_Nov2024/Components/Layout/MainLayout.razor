@inherits LayoutComponentBase

<div class="page">
    <NavBarComponent />

    <main>
        <!-- Main content -->
        <div class="container-fluid py-4">
            @Body
        </div>

        <!-- Footer -->
        <footer class="footer border-top py-3 bg-light">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6 text-center text-md-start">
                        <small class="text-muted">
                            Si encuentra algun error puede contactar a soporte.
                        </small>
                    </div>
                    <div class="col-12 col-md-6 text-center text-md-end">
                        <small class="text-muted">
                            @DateTime.Now.Year Red Nacional de Bancos de Sangre. | Version 1.0.0 | Desarrollado con <i class="bi bi-droplet-fill text-danger"></i>
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    </main>
</div>

<style>
    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        max-width: 1800px;
    }

    .footer {
        margin-top: auto;
    }
</style>