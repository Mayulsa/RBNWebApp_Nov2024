@rendermode InteractiveServer
@using Blazored.LocalStorage
@inject ILocalStorageService LocalStorage
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RBNWebApp_Nov2024</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reservations">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reservations
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="manage-reservations">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reservations Managment
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="refrigerators">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Refrigerators
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="user-map">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Locations Map
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="javascript:void(0)" @onclick="LogoutAsync">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Logout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private async Task LogoutAsync()
    {
        await LocalStorage.RemoveItemAsync("userProfile");
        NavigationManager.NavigateTo("/login", true);
    }
}

